node {
     
  stage('Git-Checkout') {
   sh 'rm -rf debit_card_management_app'
   sh 'git clone -b development https://Shyam_6@bitbucket.org/sample-slack/debitcardapp.git'
  }
   
    
 def project_path="debitcardapp"
 
 dir(project_path) {
    
  stage('Maven-Clean') {
   sh label: 'Clean', script: 'mvn clean'
  }
    
 stage('Maven-Compile') {
   sh label: 'Compile', script: 'mvn compile'
  }
  
 stage('Sonar Analysis'){
   withSonarQubeEnv('SonarQube')
 { 
  sh 'mvn sonar:sonar'
 }
 }
 
   stage('Maven-Test') {
   sh label: '', script: 'mvn test'
  }
  
   stage('Maven-Package') {
   sh label: '', script: 'mvn package'
  }
  
            
     stage('Snyk-test') {
    sh label: '', script: 'mvn -N io.takari:maven:wrapper'
   snykSecurity severity: 'high', snykInstallation: 'SnykPlugin', snykTokenId: 'snyk-id'
  }
  
  
  }
  
   stage('Getting Ready For Ansible') {
   sh 'rm -rf samplescript'
   sh 'git clone -b development https://Shyam_6@bitbucket.org/sample-slack/samplescript.git'
  }
         
def playbook_path="samplescript/Ansible"
dir(playbook_path) {
stage('Ansible Playbook Execution') {
sh label: 'Ansible', script: 'ansible-playbook -i inventory -u DevelopmentVM playbook.yml'
}
}

      
